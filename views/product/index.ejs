<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products List</title>
    <link rel="stylesheet" href="/css/app.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</head>

<body>
    <div class="container">
        <h1>Products List</h1>
        <div class="mb-3">
            <a href="/product/new" class="btn btn-primary">Add New Product</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#id</th>
                    <th scope="col">Product Code</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Product Date</th>
                    <th scope="col">Product Origin Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">
                        <a href="/product/?sort=ProductStoreCode">Product Store Code</a>
                    </th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                    <tr>
                        <th scope="row">
                            <%= product._id %>
                        </th>
                        <td>
                            <%= product.ProductCode %>
                        </td>
                        <td>
                            <%= product.ProductName %>
                        </td>
                        <td>
                            <%= product.ProductDate %>
                        </td>
                        <td>
                            <%= product.ProductOriginPrice %>
                        </td>
                        <td>
                            <%= product.Quantity %>
                        </td>
                        <td>
                            <%= product.ProductStoreCode %>
                        </td>
                        <td>
                            <a href="/product/<%= product._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                            <form action="/product/<%= product._id %>" method="POST"
                                style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>

</html>
